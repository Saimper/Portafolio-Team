---
import SectionContainer from "@/components/layouts/SectionContainer.astro";
import TeamMemberCard from "@/components/ui/TeamMemberCard.astro";

const teamMembers = [
  {
    image: "/team/Joel.webp",
    name: "Joel Solano",
    role: "Tech Lead",
    alt: "Joel Solano - Tech Lead",
    bio: "Experto en arquitectura de software y liderazgo técnico",
    links: {
      linkedin: "https://www.linkedin.com/in/joel-solano-765561269/",
      github: "https://github.com/Saimper"
    }
  },
  {
    image: "/team/Jorge.jpeg",
    name: "Jorge Manjarréz",
    role: "Backend Developer",
    alt: "Jorge Manjarréz - Backend Developer",
    bio: "Especialista en Node.js y bases de datos distribuidas",
    links: {
      linkedin: "https://www.linkedin.com/in/jorge-manjarrez-881430236/",
      github: "https://github.com/jorge-manjarrez"
    }
  },
  {
    image: "/team/Eva.webp",
    name: "Eva Contreras",
    role: "UI/UX Designer",
    alt: "Eva Contreras - UI/UX Designer",
    bio: "Diseñadora de experiencias de usuario centradas en el cliente",
    links: {
      linkedin: "#",
      github: "#"
    }
  }
];
---

<SectionContainer id="team" class="text-white py-4">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <!-- Título con gradiente aplicado directamente -->
    <h2 class="text-4xl md:text-5xl mb-12 text-center">
      <span class="inline-block text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-400">
        Equipo
      </span>
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10">
      {teamMembers.map((member) => (
        <div class="flex flex-col items-center px-4">
          <TeamMemberCard 
            image={member.image}
            name={member.name}
            role={member.role}
            alt={member.alt}
            bio={member.bio}
            links={member.links}
          />
        </div>
      ))}
    </div>
  </div>
</SectionContainer>