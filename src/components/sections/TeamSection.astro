---
import SectionContainer from "@/components/layouts/SectionContainer.astro";
import TeamMember from "@/components/ui/TeamMember.astro";
import GradientTitle from "@/components/ui/GradientTitle.astro";

const teamMembers = [
  {
    image: "/team/Joel.webp",
    name: "Joel Solano",
    role: "Tech Lead",
    alt: "Carlos Pérez - Líder técnico"
  },
  {
    image: "/team/Jorge.jpeg",
    name: "Jorge Manjarréz",
    role: "Backend Developer",
    alt: "María Gómez - Especialista en Node.js"
  },
  {
    image: "/team/Eva.webp",
    name: "Eva Contreras",
    role: "UI/UX Designer",
    alt: "Andrés López - Diseñador de interfaces"
  }
];
---

<SectionContainer id="team" class="text-white">
  <div class="max-w-6xl mx-auto px-6">
    <GradientTitle>
      Nuestro Equipo
    </GradientTitle>

    
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
      {teamMembers.map((member) => (
        <TeamMember 
          image={member.image}
          name={member.name}
          role={member.role}
          alt={member.alt}
        />
      ))}
    </div>
  </div>
</SectionContainer>