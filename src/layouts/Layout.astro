---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Favicon from "../components/Favicon.astro";
import "./src/styles/global.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<Favicon />
		<title>Portafolio web equipo de desarrollo</title>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body class="bg-gray-900">
		<!-- Fondo global Ãºnico -->
		<div class="fixed inset-0 -z-50 overflow-hidden">
			<div class="absolute inset-0 bg-gray-900"></div>
			<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-20">
				<div class="w-[800px] h-[800px] rounded-full bg-gradient-to-r from-purple-500/30 to-blue-500/30 blur-3xl"></div>
			</div>
		</div>

		<div class="min-h-screen flex flex-col relative z-10">
			<Header />
			<main class="flex-grow">
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>

<style>
	html, body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
	}
</style>