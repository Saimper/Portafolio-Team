---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Sección del Equipo con fondo generado por CSS -->
  <section class="min-h-screen flex items-center justify-center bg-gray-900 text-white py-20 px-6 relative overflow-hidden">
    <!-- Efecto de fondo abstracto con CSS puro -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
        <div class="w-[800px] h-[800px] rounded-full bg-gradient-to-r from-purple-500/30 to-blue-500/30 blur-3xl"></div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto text-center relative z-10">
      {/* Título y descripción */}
      <h1 class="text-4xl md:text-6xl font-semibold mb-6">
        <span class="block">Hola, somos</span>
        <span class="bg-gradient-to-r from-purple-400 to-blue-500 bg-clip-text text-transparent">SpacesDevs</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto mb-12">
        Equipo de desarrollo especializado en crear soluciones tecnológicas innovadoras. 
        Más de 50 proyectos entregados con excelencia.
      </p>

      {/* Grid de fotos del equipo - Placeholders */}
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-16">
        <!-- Miembro 1 -->
        <div class="flex flex-col items-center">
          <div class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-gray-700 mb-3 flex items-center justify-center text-4xl">
            👨‍💻
          </div>
          <span class="font-medium">Líder Dev</span>
          <span class="text-sm text-gray-400">Frontend</span>
        </div>
        
        <!-- Miembro 2 -->
        <div class="flex flex-col items-center">
          <div class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-gray-700 mb-3 flex items-center justify-center text-4xl">
            👩‍💻
          </div>
          <span class="font-medium">Backend</span>
          <span class="text-sm text-gray-400">Node.js</span>
        </div>
        
        <!-- Miembro 3 -->
        <div class="flex flex-col items-center">
          <div class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-gray-700 mb-3 flex items-center justify-center text-4xl">
            🧑‍🎨
          </div>
          <span class="font-medium">Diseñador UI</span>
          <span class="text-sm text-gray-400">Figma</span>
        </div>
        
        <!-- Miembro 4 -->
        <div class="flex flex-col items-center">
          <div class="w-24 h-24 md:w-32 md:h-32 rounded-full bg-gray-700 mb-3 flex items-center justify-center text-4xl">
            👨‍🔧
          </div>
          <span class="font-medium">DevOps</span>
          <span class="text-sm text-gray-400">AWS</span>
        </div>
      </div>

      {/* Botones de acción */}
      <div class="flex flex-wrap justify-center gap-4">
        <a href="#contacto" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg transition font-medium">
          Contactar al equipo
        </a>
        <a href="#proyectos" class="px-6 py-3 border border-gray-600 hover:bg-gray-800 rounded-lg transition font-medium">
          Ver proyectos
        </a>
      </div>
    </div>
  </section>
</Layout>